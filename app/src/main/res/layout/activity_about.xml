<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/titlebar3"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="#b4eeb4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="80dp"
            android:background="#b4eeb4"
            android:padding="5dp">

            <TextView
                android:id="@+id/text1_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Parampapah"
                android:textColor="#1b4030"
                android:textSize="45dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text2_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_about"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Quiz Is..."
                android:textColor="#1b4030"
                android:textSize="45dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/TVAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2_about"
                android:padding="20dp"
                android:text="About"
                android:textColor="#1b4030"
                android:textSize="15sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TVAbout"
                android:layout_marginBottom="100dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="30dp"
                    android:background="@drawable/box2"
                    android:onClick="Okay"
                    android:text="Okay"
                    android:textColor="#b4eeb4" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>