<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#88c26e"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    tools:context="fahri.fars.id.finalprojectiak.checking">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/TVQuestion_start_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Question1"
                android:textColor="#000" />

            <RadioGroup
                android:id="@+id/RG1_start_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TVQuestion_start_quiz"
                android:layout_margin="20dp">

                <RadioButton
                    android:id="@+id/RBA_start_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer A" />

                <RadioButton
                    android:id="@+id/RBB_start_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer B" />

                <RadioButton
                    android:id="@+id/RBC_start_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer C" />

                <RadioButton
                    android:id="@+id/RBD_start_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer D" />
            </RadioGroup>

            <Button
                android:id="@+id/BT1_start_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/RG1_start_quiz"
                android:layout_margin="20dp"
                android:background="@drawable/box1"
                android:onClick="BT1_start_quiz"
                android:text="NExt"
                android:textColor="#000" />
        </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>
