<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fahri.fars.id.finalprojectiak.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/titlebar1"></include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#b4eeb4"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="80dp"
            android:background="#b4eeb4"
            android:padding="5dp">

            <TextView
                android:id="@+id/text1_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Parampah"
                android:textColor="#1b4030"
                android:textSize="45dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text2_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_Main"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Quiz"
                android:textColor="#1b4030"
                android:textSize="45dp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/relative1_Main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2_Main"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RLStart_Quiz_Main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box2"
                    android:onClick="RLStart_Quiz_Main"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/TVstart_quiz_Main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="casual"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="Start Quiz"
                        android:textColor="#b4eeb4"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RLAbout_Main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box2"
                    android:onClick="RLAbout_Main"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/TVAbout_Main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="casual"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="About"
                        android:textColor="#b4eeb4"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RLHelp_Main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box2"
                    android:onClick="RLHelp_Main"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/TVHelp_Main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="casual"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="Help"
                        android:textColor="#b4eeb4"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
