<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#88c26e"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    tools:context="fahri.fars.id.finalprojectiak.checking">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/text1_titlebar7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Check The Box"
                android:textColor="@android:color/darker_gray"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text2_titlebar7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_titlebar7"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Below!"
                android:textColor="@android:color/darker_gray"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/CB1_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2_titlebar7"
                android:layout_marginTop="50dp"
                android:text="input your name first! "
                android:textStyle="italic" />
            android:textStyle="italic" />

            <CheckBox
                android:id="@+id/CB2_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CB1_checking"
                android:layout_marginTop="10dp"
                android:text="input your city first! "
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/CB3_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CB2_checking"
                android:layout_marginTop="10dp"
                android:text="You've done read 'About' on the main screen"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/CB4_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CB3_checking"
                android:layout_marginTop="10dp"
                android:text="You've done read 'Help' on the main screen"
                android:textStyle="italic" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/CB4_checking"
                android:layout_margin="20dp"
                android:background="@drawable/box1"
                android:onClick="BT1_checking"
                android:text="Done"
                android:textColor="#000" />
        </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>
